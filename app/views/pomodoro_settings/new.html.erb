<% content_for(:title, 'ポモドーロ登録')%>
<div class="container">
  <div class="pomodoro-create-form">
    <h1>ポモドーロ登録</h1>

    <%= form_with model: [@user,@pomodoro_setting] do |pomodoro| %>
      <% if @pomodoro_setting.errors.any? %>
        <div style="color: red">
          <ul>
            <% @pomodoro_setting.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <div class="form-group">
          <%= pomodoro.label :set_title, 'セッション名' %>
          <%= pomodoro.text_field :set_title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= pomodoro.label :minutes, '時間（分）' %>
          <%= pomodoro.text_field :minutes, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= pomodoro.label :breaks, '休憩（分）' %>
          <%= pomodoro.text_field :breaks, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= pomodoro.label :total_sets, 'セット数' %>
          <%= pomodoro.text_field :total_sets, class: "form-control" %>
        </div>
        <div class='create-submit'>
          <%= pomodoro.submit '登録', class: "create-btn" %>
        </div>
    <% end %>
  </div>
</div>